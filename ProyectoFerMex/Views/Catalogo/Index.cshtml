@using ProyectoFerMex.Models
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<section class="container">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h2 class="text-warning text-uppercase"> Todos los productos </h2>
            <h3 class="text-capitalize"> Aqui se muestran los productos mas vendidos actualmente</h3>
            <p class="text-muted">Mejoramos continuamente nuestros conocimientos para ofrecer a nuestros clientes los mejores productos calidad-precio</p>
        </div>
    </div>
    <br />
    <br />
    <center style="justify-content;">
        @foreach (Producto producto in ViewBag.productos)
        {
            <article class="col-lg-4" style="padding-top:35px;">
                <div class="card">
                    <img src="~/Content/img/productos/@producto.IMAGEN" alt="Producto no disponible" class="card-img" width="150px" height="200px">
                </div>
                <div class="w3-container w3-center">
                    <p><b>@producto.NOMBRE</b></p>
                    <p>@producto.DESCRIPCION</p>
                    <p>$@producto.PRECIO.Trim().00</p>
                </div>
                <div class="w3-container w3-center">
                    <button class="btn btn-info"><a style="text-decoration:none; color:white;" href="@Url.Action("Agregar","Carro",new { id=producto.ID_PRODUCTO})">Comprar ahora</a></button>
                    
                </div>
            </article>
        }
    </center>

</section>


