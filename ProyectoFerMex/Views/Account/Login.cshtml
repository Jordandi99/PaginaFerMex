@using ProyectoFerMex.Models
@model LoginViewModel
@Styles.Render("~/Content/css/StyleLog.css")

@{
    ViewBag.Title = "Iniciar sesión";
}
<body>

    <div class="login">
        <h1>@ViewBag.Title.</h1>


        <form method="post">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4 style="color:azure">Utilice una cuenta local para iniciar sesión.</h4>
                <hr />
                <!-- <input type="text" name="u" placeholder="Username" required="required" />-->

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "text-danger" })
                    <!--<div class="col-md-10">-->
                    @Html.TextBoxFor(m => m.Email, new { @class = "inpute" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
                <!--</div>-->

                @Html.LabelFor(m => m.Password, new { @class = "text-danger" })
                @Html.PasswordFor(m => m.Password, new { @class = "inpute" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe, new { @class = "text-warning" })
                        </div>
                    </div>
                </div>


                <button type="submit" class="btn btn-primary btn-block btn-large">Iniciar Session </button>


                <br><br />
                <p>
                    @Html.ActionLink("Registrarse como usuario nuevo", "Register", new { @class = "text-primary" })
                </p>
                @* Habilite esta opción una vez tenga la confirmación de la cuenta habilitada para la funcionalidad de restablecimiento de contraseña
                    <p>
                        @Html.ActionLink("¿Ha olvidado su contraseña?", "ForgotPassword")
                    </p>*@

            }
        </form>



    </div>
</body>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}