@model ProyectoFerMex.Models.Empleado

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}
@Styles.Render("~/Content/css/StyleForms.css")


<body>
    <div class="container">
        <br /><br /><br />

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

